<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ConsultorioMedAPP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ConsultorioMedAPP.styles.css" asp-append-version="true" />
    <style>
        body {
            display: flex;
            min-height: 100vh;
            background-color: #f5f7fa;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background: linear-gradient(180deg, #3dd5c8 0%, #2ab3a8 100%);
            padding-top: 0;
            position: fixed;
            height: 100%;
            box-shadow: 3px 0 15px rgba(0,0,0,0.1);
            overflow-y: auto;
        }

        .sidebar-header {
            background-color: rgba(255,255,255,0.15);
            padding: 20px;
            text-align: center;
            border-bottom: 1px solid rgba(255,255,255,0.2);
        }

        .navbar-brand {
            font-weight: 700;
            color: #fff !important;
            font-size: 1.3rem;
            text-decoration: none;
            display: block;
            margin: 0;
        }

            .navbar-brand:hover {
                color: #fff !important;
            }

        .sidebar-menu {
            padding: 15px 0;
        }

        .sidebar a {
            display: flex;
            align-items: center;
            color: #fff;
            padding: 12px 20px;
            text-decoration: none;
            transition: all 0.3s;
            font-size: 0.95rem;
            border-left: 3px solid transparent;
        }

            .sidebar a:hover {
                background-color: rgba(255,255,255,0.15);
                border-left-color: #fff;
                padding-left: 25px;
            }

            .sidebar a.menu-category {
                font-weight: 600;
                cursor: pointer;
            }

        .sidebar .submenu {
            background-color: rgba(0,0,0,0.1);
            padding-left: 0;
        }

            .sidebar .submenu a {
                padding-left: 45px;
                font-size: 0.9rem;
                font-weight: 400;
            }

                .sidebar .submenu a:hover {
                    padding-left: 50px;
                }

        .menu-icon {
            margin-right: 12px;
            font-size: 1.1rem;
            width: 24px;
            text-align: center;
        }

        /* Contenido principal */
        .main-content {
            margin-left: 250px;
            padding: 30px;
            width: 100%;
            background-color: #f5f7fa;
        }

        footer {
            background: #fff;
            padding: 20px;
            text-align: center;
            border-top: 1px solid #e0e0e0;
            color: #666;
            margin-top: 40px;
        }

        /* Scrollbar personalizado */
        .sidebar::-webkit-scrollbar {
            width: 6px;
        }

        .sidebar::-webkit-scrollbar-track {
            background: rgba(0,0,0,0.1);
        }

        .sidebar::-webkit-scrollbar-thumb {
            background: rgba(255,255,255,0.3);
            border-radius: 3px;
        }

            .sidebar::-webkit-scrollbar-thumb:hover {
                background: rgba(255,255,255,0.5);
            }

        hr {
            border-color: rgba(255,255,255,0.2);
            margin: 10px 20px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                
                DUNAMYS S.A.
            </a>
        </div>

        <div class="sidebar-menu">
            <a asp-controller="Home" asp-action="Index">
                <span class="menu-icon">🏠</span>
                Inicio
            </a>

            <a class="menu-category" data-bs-toggle="collapse" href="#menuPersonas" role="button" aria-expanded="false" aria-controls="menuPersonas">
                <span class="menu-icon">👤</span>
                Personal
            </a>
            <div class="collapse submenu" id="menuPersonas">
                <a asp-controller="Personas" asp-action="Index">Personas</a>
                <a asp-controller="Generoes" asp-action="Index">Géneros</a>
                <a asp-controller="Correos" asp-action="Index">Correos</a>
                <a asp-controller="TipoCorreos" asp-action="Index">Tipo de Correos</a>
                <a asp-controller="Telefonoes" asp-action="Index">Teléfonos</a>
                <a asp-controller="TipoTelefonoes" asp-action="Index">Tipo de Teléfonos</a>
            </div>

            <a class="menu-category" data-bs-toggle="collapse" href="#menuPacientes" role="button" aria-expanded="false" aria-controls="menuPacientes">
                <span class="menu-icon">🩺</span>
                Clientes
            </a>
            <div class="collapse submenu" id="menuPacientes">
                <a asp-controller="Pacientes" asp-action="Index">Pacientes</a>
                <a asp-controller="Seguroes" asp-action="Index">Seguro</a>
                <a asp-controller="TipoSeguroes" asp-action="Index">Tipo de Seguro</a>
                <a asp-controller="TipoEnfermedads" asp-action="Index">Tipo de Enfermedad</a>
                <a asp-controller="AntecedentesMedicoes" asp-action="Index">Antecedentes Médicos</a>
            </div>

            <a class="menu-category" data-bs-toggle="collapse" href="#menuDoctores" role="button" aria-expanded="false" aria-controls="menuDoctores">
                <span class="menu-icon">👨‍⚕️</span>
                Doctores
            </a>
            <div class="collapse submenu" id="menuDoctores">
                <a asp-controller="Doctors" asp-action="Index">Doctores</a>
                <a asp-controller="Especialidads" asp-action="Index">Especialidades</a>
                <a asp-controller="Diagnosticoes" asp-action="Index">Diagnóstico</a>
                <a asp-controller="Turnoes" asp-action="Index">Turno</a>
                <a asp-controller="TipoTurnoes" asp-action="Index">Tipo de Turnos</a>
            </div>

            <a class="menu-category" data-bs-toggle="collapse" href="#menuCitas" role="button" aria-expanded="false" aria-controls="menuCitas">
                <span class="menu-icon">📅</span>
                Citas
            </a>
            <div class="collapse submenu" id="menuCitas">
                <a asp-controller="Citums" asp-action="Index">Gestión de Citas</a>
                <a asp-controller="EstadoCitums" asp-action="Index">Estado de la Cita</a>
            </div>

            <a class="menu-category" data-bs-toggle="collapse" href="#menuFactura" role="button" aria-expanded="false" aria-controls="menuFactura">
                <span class="menu-icon">💰</span>
                Finanzas
            </a>
            <div class="collapse submenu" id="menuFactura">
                <a asp-controller="Facturas" asp-action="Index">Facturas</a>
                <a asp-controller="DetalleFacturas" asp-action="Index">Detalle de Facturas</a>
            </div>

            <hr />

            <a asp-controller="Home" asp-action="Privacy">
                <span class="menu-icon">📊</span>
                Inventario
            </a>

            <a asp-controller="Home" asp-action="Privacy">
                <span class="menu-icon">🔒</span>
                Privacidad
            </a>
        </div>
    </div>

    <!-- Contenido principal -->
    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2025 - ConsultorioMedAPP | DUNAMYS S.A.
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>