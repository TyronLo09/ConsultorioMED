@model IEnumerable<ConsultorioMedAPP.Models.Persona>

@{
    ViewData["Title"] = "Lista de Personas";
}

<h1 class="text-center mb-4">Lista de Personas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nueva Persona</a>
</p>

<table class="table table-striped table-bordered shadow-sm align-middle rounded">
    <thead class="table-success text-center">
        <tr>
            <th>Cédula</th>
            <th>Nombre</th>
            <th>Primer Apellido</th>
            <th>Segundo Apellido</th>
            <th>Fecha Nacimiento</th>
            <th>Fecha Creación</th>
            <th>Activo</th>
            <th>Correos</th>
            <th>Teléfonos</th>
            <th>Género</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">@item.IdCedula</td>
                <td>@item.Nombre</td>
                <td>@item.Apellido1</td>
                <td>@item.Apellido2</td>
                <td>@item.FechaNacimiento.ToString("dd/MM/yyyy")</td>
                <td>@item.FechaCreacion?.ToString("dd/MM/yyyy HH:mm")</td>

                <td class="text-center">
                    @if (item.Activo == true)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactivo</span>
                    }
                </td>

                <td>
                    @if (item.Correos != null && item.Correos.Any())
                    {
                        @foreach (var correo in item.Correos)
                        {
                            <div>@correo.DirecCorreo</div>
                        }
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </td>

                <td>
                    @if (item.Telefonos != null && item.Telefonos.Any())
                    {
                        @foreach (var tel in item.Telefonos)
                        {
                            <div>@tel.Numero</div>
                        }
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </td>

                <td class="text-center">
                    @(item.IdGeneroNavigation?.Descripcion ?? "Sin género")
                </td>

                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.IdCedula" class="btn btn-primary btn-sm me-1">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.IdCedula" class="btn btn-info btn-sm me-1">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.IdCedula" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
