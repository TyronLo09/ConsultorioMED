@model IEnumerable<ConsultorioMedAPP.Models.DetalleFactura>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subtotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FacturaIdFacturaNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCitaCitaNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subtotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FacturaIdFacturaNavigation.IdFactura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCitaCitaNavigation.IdCita)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdDetalleFactura">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdDetalleFactura">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdDetalleFactura">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
